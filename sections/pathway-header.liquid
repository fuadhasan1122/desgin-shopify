{%- style -%}
  :root {
    --header-bg-initial: {{ section.settings.bg_color_initial }};
    --header-bg-sticky: {{ section.settings.bg_color_sticky }};
    --nav-link-initial: {{ section.settings.nav_link_initial }};
    --nav-link-sticky: {{ section.settings.nav_link_sticky }};
  }
{%- endstyle -%}

<header class="pathway-header {% if section.settings.make_sticky %}is-sticky{% endif %}" id="main-header">
  <div class="header-container">
    <div class="header-logo">
      <a href="/" class="logo-text" style="color: var(--nav-link-initial);">Path<span>way</span></a>
    </div>

    <nav class="header-nav" id="nav-menu">
      <ul class="nav-list">
        {%- for link in section.settings.menu.links -%}
          <li><a href="{{ link.url }}" class="nav-item">{{ link.title }}</a></li>
        {%- endfor -%}
      </ul>
    </nav>

    <div class="header-cta">
      <a href="{{ section.settings.btn_url }}" class="gradient-btn">{{ section.settings.btn_text }}</a>
      <button class="mobile-toggle" id="mobile-toggle" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>


<script>
  window.onscroll = function() {
    const header = document.getElementById("main-header");
    if (window.pageYOffset > 50) {
      header.classList.add("scrolled");
    } else {
      header.classList.remove("scrolled");
    }
  };
</script>

<style>

@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap');

.pathway-header {
  font-family: 'Poppins', sans-serif;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 30px 0;
  z-index: 1000;
  background-color: var(--header-bg-initial);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.pathway-header.is-sticky.scrolled {
  position: fixed;
  padding: 15px 0;
  background-color: var(--header-bg-sticky);
  box-shadow: 0 4px 20px rgba(0,0,0,0.15);
}

.header-container {
  max-width: 1320px; 
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
}


.logo-text {
  font-size: 32px; 
  font-weight: 800; 
  color: var(--nav-link-initial);
  text-decoration: none;
  letter-spacing: -1.5px; 
  line-height: 1;
}

.logo-text span {
  color: #EF4444; 
}


.nav-list {
  display: flex;
  list-style: none;
  gap: 35px;
  margin: 0;
  padding: 0;
}

.nav-item {
  color: var(--nav-link-initial);
  text-decoration: none;
  font-size: 15px; 
  font-weight: 600;
  text-transform: capitalize;
  transition: color 0.3s ease;
}


.gradient-btn {
  background: linear-gradient(90deg, #D61A5E 0%, #FF7A00 100%);
  color: white !important;
  padding: 14px 32px;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 600;
  font-size: 15px;
  box-shadow: 0 4px 15px rgba(214, 26, 94, 0.3);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.gradient-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(214, 26, 94, 0.4);
}

/* Mobile Toggle Button */
.mobile-toggle {
  display: none;
  flex-direction: column;
  gap: 6px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px;
  z-index: 1001;
}

.mobile-toggle span {
  display: block;
  width: 28px;
  height: 3px;
  background-color: var(--nav-link-initial);
  transition: 0.3s;
  border-radius: 2px;
}

/* Scrolled state for toggle */
.scrolled .mobile-toggle span {
  background-color: var(--nav-link-sticky);
}

/* Mobile State */
@media (max-width: 990px) {
  .mobile-toggle { display: flex; }

  .header-nav {
    position: fixed;
    top: 0;
    right: -100%; /* Hidden by default */
    width: 80%;
    max-width: 300px;
    height: 100vh;
    background: var(--header-bg-sticky); /* Uses sticky color for drawer */
    padding: 100px 40px;
    transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: -10px 0 30px rgba(0,0,0,0.2);
  }

  .header-nav.is-open {
    right: 0;
  }

  .nav-list {
    flex-direction: column;
    gap: 25px;
  }

  .nav-item {
    font-size: 20px;
    color: var(--nav-link-sticky) !important;
  }

  .header-cta .gradient-btn {
    display: none; /* Hide button on mobile or move it inside nav */
  }

  /* Hamburger Animation */
  .mobile-toggle.is-active span:nth-child(1) { transform: translateY(9px) rotate(45deg); }
  .mobile-toggle.is-active span:nth-child(2) { opacity: 0; }
  .mobile-toggle.is-active span:nth-child(3) { transform: translateY(-9px) rotate(-45deg); }
}

@media (max-width: 990px) {
  .header-nav { display: none; }
  .logo-text { font-size: 24px; }
}
</style>

{% schema %}
{
  "name": "Pathway Header",
  "settings": [
    {
      "type": "header",
      "content": "Sticky Settings"
    },
    {
      "type": "checkbox",
      "id": "make_sticky",
      "label": "Enable Sticky Header",
      "default": true
    },
    {
      "type": "header",
      "content": "Colors (Initial State)"
    },
    {
      "type": "color",
      "id": "bg_color_initial",
      "label": "Background Color (Top)",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "nav_link_initial",
      "label": "Font Color (Top)",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Colors (Scrolled/Sticky State)"
    },
    {
      "type": "color",
      "id": "bg_color_sticky",
      "label": "Background Color (Scroll)",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "nav_link_sticky",
      "label": "Font Color (Scroll)",
      "default": "#ffffff"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Purchase Now"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Pathway Header"
    }
  ]
}
{% endschema %}